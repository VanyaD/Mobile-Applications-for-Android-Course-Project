<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/mainAppBarColor</item>
        <item name="colorPrimaryDark">@color/mainAppBarDarkColor</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="AppTheme.CustomTheme">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowCloseOnTouchOutside">true</item>
    </style>

    <style name="mainPageButtons">
        <item name="android:background">@drawable/apptheme_btn_default_holo_dark</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_margin">10dp</item>
        <item name="android:layout_marginTop">20dp</item>
        <item name="android:textSize">25sp</item>
    </style>

    <style name="textView_locationPage">
        <item name="android:textSize">20sp</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:textColor">@color/mainAppColor</item>
        <item name="android:layout_centerHorizontal">true</item>
    </style>

    <style name="button_goToNextPage">
        <item name="android:textAllCaps">false</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:background">@drawable/green_apptheme_btn_default_holo_dark</item>
        <item name="android:text">Next</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:textSize">27sp</item>
        <item name="android:layout_gravity">center_horizontal</item>
    </style>

    <style name="editText_detailsPage">
    <item name="android:singleLine">true</item>
    <item name="android:textColor">@color/mainAppColor</item>
    <item name="android:textSize">25sp</item>
    <item name="android:textColorHint">@color/mainAppColor</item>
    <item name="android:layout_marginBottom">25dp</item>
    </style>

    <style name="mainTextView">
        <item name="android:textSize">30sp</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:textColor">@color/mainAppColor</item>
        <item name="android:layout_centerHorizontal">true</item>
    </style>
</resources>
