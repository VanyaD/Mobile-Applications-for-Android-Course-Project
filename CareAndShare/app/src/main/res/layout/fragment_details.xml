<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/myBlack">

    <TextView
        android:id="@+id/tv_details"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Details"
        android:textSize="25dp"
        android:textColor="@color/mainAppColor"
        android:layout_gravity="center_horizontal"
        android:layout_centerHorizontal="true"
        android:paddingBottom="50dp"
        />
    <EditText
        android:id="@+id/et_title"
        android:layout_below="@id/tv_details"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Enter the title"
        android:textColor="@color/mainAppColor"
        android:layout_centerHorizontal="true"
        android:textSize="25sp"
        android:textColorHint="@color/mainAppColor"
        android:layout_marginBottom="25dp"/>

    <EditText
        android:id="@+id/et_description"
        android:layout_below="@id/et_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Enter the description"
        android:textSize="25sp"
        android:textColorHint="@color/mainAppColor"
        android:textColor="@color/mainAppColor"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="25dp"
        />

    <TextView
        android:id="@+id/tv_chooseCategory"
        android:layout_below="@id/et_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Choose category from bellow"
        android:textColor="@color/mainAppColor"
        android:layout_centerHorizontal="true"
        android:textSize="25sp"/>

    <Spinner
        android:id="@+id/sp_category"
        android:background="@color/mainAppColor"
        android:backgroundTint="@color/mainAppColor"
        android:textAlignment="center"
        android:layout_below="@id/tv_chooseCategory"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="25dp"
        android:layout_centerHorizontal="true"/>

    <EditText
        android:id="@+id/et_priority"
        android:layout_below="@id/sp_category"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Enter the priority"
        android:textSize="25sp"
        android:textColorHint="@color/mainAppColor"
        android:textColor="@color/mainAppColor"
        android:layout_centerHorizontal="true"
        android:phoneNumber="true"
        />

    <Button
        android:id="@+id/button_submitFinalIdea"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/green_apptheme_btn_default_holo_dark"
        android:onClick="bt_submitIdea"
        android:text="Submit idea"
        android:layout_marginTop="10dp"
        android:textSize="25sp"
        android:layout_below="@id/et_priority"
        android:textAllCaps="false"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center_horizontal"
        android:drawableRight="@drawable/submit_final_idea"/>

</RelativeLayout>