<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.android.careandshare.MainActivityFragment"
    tools:showIn="@layout/activity_main"
    android:background="@color/myBlack"
    >

    <Button
        android:layout_height="wrap_content"
        android:layout_width="300dp"
        android:text="Submit a problem"
        android:onClick="goToSubmitionActivity"
        android:drawableLeft="@drawable/submit_problem"
        android:background="@drawable/apptheme_btn_default_holo_dark"
        android:textAllCaps="false"
        android:layout_gravity="center"
        android:layout_margin="10dp"
        android:textSize="25dp"
        />

    <Button
        android:layout_height="wrap_content"
        android:layout_width="300dp"
        android:text="List problems"
        android:onClick="MyButtonClick"
        android:drawableLeft="@drawable/list_problems"
        android:background="@drawable/apptheme_btn_default_holo_dark"
        android:textAllCaps="false"
        android:layout_gravity="center"
        android:layout_margin="10dp"
        android:textSize="25dp"
        />

    <Button
        android:id="@+id/button_submitProblem"
        android:layout_height="wrap_content"
        android:layout_width="300dp"
        android:text="About CareAndShare"
        android:onClick="MyButtonClick"
        android:drawableLeft="@drawable/about_app"
        android:background="@drawable/apptheme_btn_default_holo_dark"
        android:textAllCaps="false"
        android:layout_gravity="center"
        android:layout_margin="10dp"
        android:textSize="25dp"
        />

</LinearLayout>
