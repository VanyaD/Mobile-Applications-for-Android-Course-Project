<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.android.careandshare.MainActivityFragment"
    tools:showIn="@layout/activity_main"
    android:background="@color/myBlack"
    >

    <Button
        android:layout_height="wrap_content"
        android:layout_width="300dp"
        android:text="Submit a problem"
        android:onClick="goToSubmitionActivity"
        android:drawableLeft="@drawable/submit_problem"
        android:background="@drawable/apptheme_btn_default_holo_dark"
        android:textAllCaps="false"
        android:layout_gravity="center"
        android:layout_margin="10dp"
        android:textSize="25dp"
        />

    <Button
        android:id="@+id/bt_listProblems"
        android:layout_height="wrap_content"
        android:layout_width="300dp"
        android:text="List problems"
        android:onClick="goToListActivity"
        android:drawableLeft="@drawable/list_problems"
        android:background="@drawable/apptheme_btn_default_holo_dark"
        android:textAllCaps="false"
        android:layout_gravity="center"
        android:layout_margin="10dp"
        android:textSize="25dp"
        />

    <Button
        android:id="@+id/button_submitProblem"
        android:layout_height="wrap_content"
        android:layout_width="300dp"
        android:text="About CareAndShare"
        android:onClick="bt_aboutCareAndShare"
        android:drawableLeft="@drawable/about_app"
        android:background="@drawable/apptheme_btn_default_holo_dark"
        android:textAllCaps="false"
        android:layout_gravity="center"
        android:layout_margin="10dp"
        android:textSize="25dp"
        />

        <TextView
        android:id="@+id/tv_aboutCareAndShare"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="This is the easiest and most convenient way to share a problem or even just an idea for improvement and be sure that it will be transferred to the respective authorities. This application is for everyone who cannot just pass by issues faced while traveling to work. This application is for everyone who cares for the others, cares for his children, cares for the future. If you are a person of action, then this application is the one for you!"
        android:textColor="@color/mainAppColor"
        android:textAllCaps="false"
        android:textSize="20sp"
            android:visibility="invisible"
        />

</LinearLayout>
